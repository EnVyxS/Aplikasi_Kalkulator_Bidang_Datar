<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background_image_one_signin">

    <Button
        android:id="@+id/lingkaran"
         android:layout_width="250dp"
         android:layout_height="48dp"
         android:layout_marginTop="10dp"
         android:background="@drawable/bgbtn"
        android:text="Menghitung Lingkaran"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/persegi"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgbtn"
        android:text="Menghitung Persegi"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/segitiga"
        android:layout_width="250dp"
        android:layout_height="48dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bgbtn"
        android:text="Menghitung Segitiga"
        android:textAllCaps="false" />






</LinearLayout>

